#include <bits/stdc++.h>
using namespace std;

int main() {
	ifstream fin ("teleport.in");
    ofstream fout ("teleport.out");
    int a,b,x,y;
    for (int i = 0; i < 4; i++){
        fin >> a >> b >> x >> y;
    }
    int d = 0;
    if ((abs(x-a)+abs(y-b))<abs(a-b)|| (abs(y-a)+abs(x-b))<abs(a-b)){
        d = min((abs(a-x) + abs(y-b)), (abs(a-y)+ abs(x-b)));
    }
    else{
        d = abs(b-a);
    }
    fout << d;
}
